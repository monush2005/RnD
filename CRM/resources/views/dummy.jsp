<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<link href="http://localhost:8080/CRM/resources/css/chat-style.css" rel="stylesheet" type="text/css" />
<title>Untitled Document</title>

</head>

<body>
<div class="crm-chat_window">
  <div class="top_menu">
  <div class="title">Dear User</div>
    <div class="buttons">
      <svg style="width:20px;height:20px" viewBox="0 0 24 24">
		<path fill="#fff" d="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41L15.59,7Z" />
	 </svg>
    </div>
  </div>
  <ul class="messages">
    <li class="message left appeared">
      <div class="avatar">
      	<img src="http://localhost:8080/CRM/resources/images/user-img.png" alt="" />
      </div>
      <div class="text_wrapper">
        <div class="text">Hello Dear :)</div>
      </div>
    </li>
    <li class="message right appeared">
      <div class="avatar">
      	<img src="user-img.png" alt="" />
      </div>
      <div class="text_wrapper">
        <div class="text">Hi Sam! How are you?</div>
      </div>
    </li>
    <li class="message left appeared">
      <div class="avatar">
      	<img src="user-img.png" alt="" />
      </div>
      <div class="text_wrapper">
        <div class="text">I'm fine, thank you!</div>
      </div>
    </li>
    <li class="message right appeared">
      <div class="avatar">
      	<img src="user-img.png" alt="" />
      </div>
      <div class="text_wrapper">
        <div class="text">Hi Rahul! How are you?</div>
      </div>
    </li>
    <li class="message left appeared">
      <div class="avatar">
      	<img src="user-img.png" alt="" />
      </div>
      <div class="text_wrapper">
        <div class="text">I'm fine, thank you!</div>
      </div>
    </li>
    <li class="message right appeared">
      <div class="avatar">
      	<img src="user-img.png" alt="" />
      </div>
      <div class="text_wrapper">
        <div class="text">Hi Abhi! How are you?</div>
      </div>
    </li>
  </ul>
  <div class="bottom_wrapper clearfix">
    <div class="message_input_wrapper">
      <input class="message_input" placeholder="Type your message here..." />
    </div>
    <div class="send_message">
      <div class="icon"></div>
      <div class="text">Send</div>
    </div>
  </div>
</div>
<div class="message_template">
  <li class="message">
    <div class="avatar"></div>
    <div class="text_wrapper">
      <div class="text"></div>
    </div>
  </li>
</div>
</body>
</html>
